{% extends 'base.html.twig' %}

{% block title %}Les structures{% endblock %}

{% block PageTitle %}Les structures{% endblock %}

{% block body %}
    <div>

        <form id="filters" class="mb-3">
            <input type="button" class="btn btn-primary js-filter" name="all" value="tout">
            <input type="button" class="btn btn-primary js-filter" name="activated" value="activés">
            <input type="button" class="btn btn-primary js-filter" name="disabled" value="désactivés">
            <input type="text" class="form-control js-query d-inline-block" placeholder="Filtrer par nom">
            <input type="hidden" name="page" value="{{ page }}">
        </form>

    </div>

    <div id="content" class="row justify-content-center content">
        {% include "structure/_content.html.twig" %}
    </div>

    {% include "_partials/_modal_switch.html.twig" %}
    {% include "_partials/_modal_delete.html.twig" %}

{% endblock %}

