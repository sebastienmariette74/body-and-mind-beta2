{% extends 'base.html.twig' %}

{% block title %}Les partenaires{% endblock %}

{% block PageTitle %}Les partenaires{% endblock %}

{% block body %}
<div>

    <form id="filters" class="mb-3">
        <input type="button" class="btn btn-primary js-filter" name="all" value="TOUT">
        <input type="button" class="btn btn-primary js-filter" name="activated" value="ACTIVES">
        <input type="button" class="btn btn-primary js-filter" name="disabled" value="DESACTIVES">
        <input type="text" class="form-control js-query d-inline-block" placeholder="Filtrer par nom">
        <input type="hidden" name="page" value="{{ page }}">
    </form>

    <a class="btn btn-success mb-3" href="{{ path('app_register_partner') }}">Ajouter un partenaire</a>

    <div id="content" class="row justify-content-center content">
        {% include "partner/_content.html.twig" %}
    </div>

</div>

{% include "_partials/_modal_switch.html.twig" %}
{% include "_partials/_modal_delete.html.twig" %}

{% endblock %}

